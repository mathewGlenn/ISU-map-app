<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Colleges">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingBottom="70dp">

        <Button
            android:backgroundTint="#F44336"
            android:id="@+id/ccsict"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="16sp"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/ccsict"
            android:textAllCaps="false"
          />

        <Button
            android:backgroundTint="#3F51B5"
            android:id="@+id/ccje"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="16sp"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/ccje"
            android:textAllCaps="false" />

        <Button
            android:backgroundTint="#FFC107"
            android:id="@+id/cbm"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/cbm"
            android:textAllCaps="false"
            android:textSize="16sp" />

        <Button
            android:backgroundTint="#E91E63"
            android:id="@+id/coe"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/coe"
            android:textAllCaps="false"
            android:textSize="16sp" />

        <Button
            android:id="@+id/iat"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/iat"
            android:textAllCaps="false"
            android:textSize="16sp" />

        <Button
            android:backgroundTint="#2196F3"
            android:id="@+id/ps"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/ps"
            android:textAllCaps="false"
            android:textSize="16sp" />

        <Button
            android:backgroundTint="#673AB7"
            android:id="@+id/sas"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/sas"
            android:textAllCaps="false"
            android:textSize="16sp" />


    </LinearLayout>
</ScrollView>